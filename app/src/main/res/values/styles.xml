<resources>

    <style name="AppTheme" parent="android:Theme.Light" />


    <style name="CustomDialogStyle" parent="@android:style/Theme.Dialog">

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="textstyle_pink_16sp">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textstyle_dark_16sp">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="v_splite_line">
        <item name="android:layout_width">0.7dp</item>
        <item name="android:background">#90E8E8E8</item>
    </style>

    <style name="h_splite_line">
        <item name="android:layout_height">0.7dp</item>
        <item name="android:background">#90E8E8E8</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

